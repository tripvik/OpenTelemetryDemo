@{
    ViewData["Title"] = "Test App - Custom gRPC Request";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>

    <form method="post" asp-action="GrpcRequest" class="mb-4">
        <div class="mb-3">
            <label for="customMessage" class="form-label">Custom Message:</label>
            <input type="text" class="form-control" id="customMessage" name="customMessage" />
        </div>

        <button type="submit" class="btn btn-primary">Send gRPC Request</button>
    </form>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-success" role="alert">
            Message from gRPC service: @ViewBag.Message
        </div>
    }

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            Error: @ViewBag.ErrorMessage
        </div>
    }

    <div>
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Back to Home</a>
    </div>
</div>