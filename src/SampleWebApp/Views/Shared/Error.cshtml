@model Exception
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="text-center">
                <h1 class="display-4 text-danger">Oops! Something went wrong.</h1>
                <p class="lead">Uh-oh! Time to put on our debugging hats and figure this out together!</p>
                <hr class="my-4">
                <p class="text-muted">Error details:</p>
                <div class="alert alert-danger text-start" role="alert">
                    <strong>@Model.Message</strong>
                    <pre class="my-2">@Model.StackTrace</pre>
                </div>
            </div>
        </div>
    </div>
</div>
